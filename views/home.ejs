<!DOCTYPE html>
<html>
<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel='stylesheet' type="text/css" href="styles.css">
<title>Medical Management System</title>

<body>
	<!-- Side navigation -->
	<div class="sidenav">
		<a href="/home">Home</a>
		<a href="#">Patients</a>
		<a href="#">Bookings</a>
		<a href="#">Visits</a>
	</div>

	<!-- Page content -->
	<div class="main">
		<h2>Today's Bookings</h2>
		<table id='homeTable'>
			<tr>
				<th>Booking ID</th>
				<th>Patient Name</th>
				<th>Service</th>
				<th>Doctor</th>
				<th>Payment</th>
				<th>Visit Date</th>
			</tr>
			<% for(var i=0; i < data.length; i++) { %>
				<tr>
					<td><%= data[i].bookingID%></td>
					<td><%= data[i].patientName%></td>
					<td><%= data[i].service%></td>
					<td><%= data[i].doctor%></td>
					<td><%= data[i].payment%></td>
					<td><%= data[i].visitDate%></td>
				</tr>
			<%} %>
		</table>
	</div>
</body>
</html>
