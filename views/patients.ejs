<!DOCTYPE html>
<html>
<!-- extending javascripts and other page basic seetings -->
<% include partials/main.ejs %>

<body>
	<!-- extending navigation bar to this page -->
	<% include partials/main.ejs %>

	<!-- creating form to submit new patient -->
	<div id='createUpdatePatient'>
		<form action="/patients" method="POST">
			<!-- <input id="id" name="id" value=NULL type="number" style="display:none"> -->
			<label>Patient's Name</label>
			<input id='name' name="patientName" style="margin-left: 20px">
			<label style="margin-left: 90px">Age</label>
			<input id='age' name="age" type="number" style="margin-left: 55px">
			<label style="margin-left: 20px">Sex</label>
			<select id='sex' name="sex" style="margin-left: 10px">
				<option id="Male" name="Male">Male</option>
				<option id="Female" name="Female">Female</option>
			</select><br>
			<label style="margin-bottom: 50px">Address</label>
			<input id='address' name="address" style="margin-left: 65px">
			<label style="margin-left: 50px">Mobile Number</label>
			<input id='mobilNum' name="mobileNum" style="margin-left: 20px">
			<button type="submit" style="margin-left: 20px; padding: 5px 27px">Submit</button>
		</form>
	</div>

	<!-- Listing all patients -->
	<center>
	<div id="listPatients">
		<h2>Patients</h2>
		<table id='patientsTable' style="clear:both">
			<tr>
				<th>Patient Name</th>
				<th>Age</th>
				<th>Sex</th>
				<th>Address</th>
				<th>Mobile Number</th>
			</tr>
			<% for(var i=0; i < data.length; i++) { %>
				<tr>
					<td><%= data[i].patientName%></td>
					<td><%= data[i].age%></td>
					<td><%= data[i].sex%></td>
					<td><%= data[i].address%></td>
					<td><%= data[i].mobileNum%></td>
				</tr>
			<%} %>
		</table>

	</div>
	</center>

</body>
</html>