<!DOCTYPE html>
<html>
<!-- extending javascripts and other page basic seetings -->
<% include partials/main.ejs %>

<body>
	<!-- extending navigation bar to this page -->
	<% include partials/main.ejs %>

	<!-- creating form to submit new patient -->
	<div id='createUpdatePatient'>
		<form action="/patients" method="POST">
			<!-- <input id="id" name="id" value=NULL type="number" style="display:none"> -->
			<label>Patient's Name</label><br>
			<input id='name' name="patientName"><br>
			<label>Age</label><br>
			<input id='age' name="age" type="number"><br>
			<label>Sex</label><br>
			<input id='sex' name="sex"><br>
			<label>Address</label><br>
			<input id='address' name="address"><br>
			<label>Mobile Number</label><br>
			<input id='mobilNum' name="mobileNum"><br>
			<button type="submit" style="margin-left: 165px">Submit</button>
		</form>
	</div>

	<!-- Listing all patients -->
	<center>
	<div id="listPatients">
		<h2>Patients</h2>
		<table id='patientsTable' style="clear:both">
			<tr>
				<th>Patient Name</th>
				<th>Age</th>
				<th>Sex</th>
				<th>Address</th>
				<th>Mobile Number</th>
			</tr>
			<% for(var i=0; i < data.length; i++) { %>
				<tr>
					<td><%= data[i].patientName%></td>
					<td><%= data[i].age%></td>
					<td><%= data[i].sex%></td>
					<td><%= data[i].address%></td>
					<td><%= data[i].mobileNum%></td>
				</tr>
			<%} %>
		</table>

	</div>
	</center>

</body>
</html>